{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "jsx": "react",
        "module": "CommonJS",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": false,
        "target": "es5",
        "esModuleInterop": true ,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [  
            "./node_modules/@types"
        ],
        "lib": [ "es2015", "dom" ],
    },
    "exclude": [
        "**/node_modules", 
        "**/.*/"
    ],
    "include": [
        "./src/**/**/*"
    ]
}